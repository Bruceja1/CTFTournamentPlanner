@model IEnumerable<CTFTournamentPlanner.Models.Player>
@{
    ViewData["Title"] = "Registered Players";
}

<h1>Lijst van spelers</h1>
<table class="table">
    <tr><th>Naam</th><th>Email</th><th>Team</th></tr>
    @foreach (Player p in Model)
    {
        <tr>
            <td>@p.UserName</td>
            <td>@p.Email</td>
            <td>@(p.Team?.Name ?? "")</td>
            <td>
                <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@p.Id">
                    Profiel
                </a>
            </td>
            <td>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@p.Id">
                    Wijzigen
                </a>
            </td>
            <td>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@p.Id">
                    Verwijderen
                </a>
            </td>
        </tr>
    }
</table>
